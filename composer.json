{
  "name": "ld-web/mvc-base-2025",
  "description": "PHP MVC base",
  "authors": [
    {
      "name": "Lucas Delobelle",
      "email": "lucas@ld-web.net"
    }
  ],
  "scripts": {
    "start": "php -S localhost:8000 -t public/ public/index.php",
    "test": "phpunit --testdox",
    "test:coverage": "XDEBUG_MODE=coverage phpunit --testdox --coverage-html coverage"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "require": {
    "symfony/dotenv": "^7.2",
    "twig/twig": "^3",
    "psr/container": "^2.0",
    "jms/serializer": "^3.32"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1"
  }
}
